// Prisma schema for Collector Card Giveaway
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String    @id @default(cuid())
  name            String?
  displayName     String?   @unique // Unique display name
  email           String?   @unique
  emailVerified   DateTime?
  image           String?   // Avatar URL (Vercel Blob)
  role            Int       @default(0) // 0=user, 1=banned, 5=moderator, 9=admin
  giveawayCredits Int       @default(0) // Earned credits for giveaway entries

  // Referral system
  referralCode    String?   @unique // Unique code for sharing
  referredBy      String?   // User ID of who referred this user
  referralCreditsEarned Int @default(0) // Total credits earned from referrals

  // Subscription
  subscriptionTier     SubscriptionTier? // null = no subscription
  subscriptionId       String?           // PayPal subscription ID
  subscriptionStart    DateTime?         // When subscription started
  subscriptionEnd      DateTime?         // When current period ends
  lastCreditsGranted   DateTime?         // Last time monthly credits were granted
  freeShippingUsedAt   DateTime?         // When free shipping was last used this period

  // Shipping address (required for giveaway participation)
  shippingName    String?
  shippingAddress String?
  shippingCity    String?
  shippingState   String?
  shippingZip     String?
  shippingCountry String?

  // Profile completion timestamp
  profileCompletedAt DateTime? // When user completed their profile (username + address)

  accounts        Account[]
  sessions        Session[]
  orders          Order[]
  creditLogs      CreditLog[]  // Log of manual credit adjustments
  subscription    Subscription?
  referrals       Referral[]   @relation("ReferrerRelation")
  deviceFingerprints DeviceFingerprint[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Device fingerprinting for multi-account detection
model DeviceFingerprint {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fingerprint   String   // Hash of browser/device characteristics
  ipAddress     String?  // IP address (optional, for additional verification)
  userAgent     String?  // Browser user agent
  
  firstSeen     DateTime @default(now())
  lastSeen      DateTime @default(now())
  
  @@unique([userId, fingerprint])
  @@index([fingerprint])
}

model Referral {
  id          String   @id @default(cuid())
  referrerId  String
  referrer    User     @relation("ReferrerRelation", fields: [referrerId], references: [id], onDelete: Cascade)
  referredEmail String // Email of the referred user
  referredUserId String? // Set when they complete registration
  creditsAwarded Int    @default(100)
  status      ReferralStatus @default(PENDING)
  createdAt   DateTime @default(now())
  completedAt DateTime?
}

enum ReferralStatus {
  PENDING    // Link clicked but not registered
  COMPLETED  // User registered and credits awarded
  EXPIRED    // Link expired (optional)
}

enum SubscriptionTier {
  BASIC    // $20/month - 5% off, free shipping on wins, 100 credits
  PLUS     // $35/month - 5% off, free shipping all, 200 credits
  PREMIUM  // $50/month - 7% off, free shipping all, 340 credits
}

model Subscription {
  id              String            @id @default(cuid())
  userId          String            @unique
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  tier            SubscriptionTier
  status          SubscriptionStatus @default(PENDING)
  paypalSubscriptionId String?      @unique
  paymentMethod   String            @default("paypal") // paypal or crypto
  amount          Decimal           @db.Decimal(10, 2)

  // Billing cycle
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  // Crypto payments tracked manually
  cryptoNote      String?           // For manual tracking of crypto payments

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

enum SubscriptionStatus {
  PENDING     // Awaiting first payment
  ACTIVE      // Currently active
  CANCELLED   // User cancelled, will end at period end
  EXPIRED     // Subscription ended
  PAUSED      // Temporarily paused
}

// Log of manual credit adjustments by admin
model CreditLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount      Int      // Positive for add, negative for remove
  reason      String?  // Admin note for why
  adminId     String   // Who made the change
  adminEmail  String?  // Admin email for reference
  balanceBefore Int    // Credit balance before change
  balanceAfter  Int    // Credit balance after change
  createdAt   DateTime @default(now())

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Store Models - Categories are dynamically added
model Category {
  id          String    @id @default(cuid())
  name        String    @unique // "Trading Cards", "Toys", "Collectibles", etc.
  slug        String    @unique
  description String?
  image       String? // Vercel Blob URL
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// SubTypes for autocomplete suggestions (e.g., "Magic The Gathering", "Pokemon", etc.)
model SubType {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

// Store settings (discount, giveaway credits, etc.)
model Settings {
  id              String  @id @default("default")

  // Price discount settings
  discountType    String  @default("percentage") // "percentage" or "fixed"
  discountValue   Decimal @default(10) @db.Decimal(5, 2) // 10 = 10% or $10

  // TCGPlayer sync settings
  autoSyncEnabled  Boolean @default(true)
  syncIntervalDays Int     @default(3)

  // Giveaway credits settings
  giveawayCreditsPerDollar Decimal @default(0.1) @db.Decimal(5, 2) // 0.1 = 1 credit per $10 spent
  giveawayCreditsEnabled   Boolean @default(true)

  // Shipping settings
  freeShippingThreshold Decimal @default(100) @db.Decimal(10, 2) // Free shipping over this amount
  flatShippingRate      Decimal @default(5) @db.Decimal(10, 2)   // Flat rate when under threshold

  updatedAt       DateTime @updatedAt
}

model Product {
  id          String      @id @default(cuid())
  name        String // Product name (required)
  slug        String      @unique
  description String?     @db.Text
  image       String? // Vercel Blob URL

  // Pricing & Inventory
  price         Decimal   @db.Decimal(10, 2) // Our selling price (after discount)
  originalPrice Decimal?  @db.Decimal(10, 2) // TCGPlayer market price
  quantity      Int       @default(0) // Stock quantity

  // Card-specific fields (optional)
  setName     String? // e.g., "Foundations", "Base Set"
  cardNumber  String? // e.g., "102/165", "PSA 10"
  cardType    String? // e.g., "Land — Mountain Forest Plains", "Creature — Human Soldier"

  // Condition
  condition   Condition?  @default(NEW)
  isFoil      Boolean     @default(false) // True for foil/holographic cards

  // Categorization
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])
  subTypeId   String?
  subType     SubType?    @relation(fields: [subTypeId], references: [id])

  // Additional fields
  sku         String?     @unique // Optional SKU for inventory
  rarity      String? // Free-form rarity text
  featured    Boolean     @default(false)
  active      Boolean     @default(true) // Show/hide in store

  // TCGPlayer integration
  tcgPlayerId   String?   // TCGPlayer product ID for re-scanning
  tcgPlayerUrl  String?   // Full TCGPlayer URL
  lastPriceSync DateTime? // Last time price was synced from TCGPlayer
  
  @@unique([tcgPlayerId, isFoil]) // Allow same card as both normal and foil

  // Giveaway credits - override default calculation
  giveawayCredits Int?    // Manual override: credits earned when purchased (null = use default calc)

  // Relations
  orderItems  OrderItem[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([categoryId])
  @@index([subTypeId])
  @@index([slug])
  @@index([active])
}

enum Condition {
  NEW
  OPENED
  USED
}

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  status        OrderStatus @default(PENDING)
  subtotal      Decimal?    @db.Decimal(10, 2)
  tax           Decimal     @default(0) @db.Decimal(10, 2)
  shipping      Decimal     @default(0) @db.Decimal(10, 2)
  total         Decimal     @db.Decimal(10, 2)

  // Payment info
  paymentProvider String?   // "paypal", "coinbase", etc.
  paymentId       String?   // Payment provider's order/charge ID

  // VIP subscription discount
  vipDiscountPercent Int?    // Percentage discount applied (5 or 7)
  vipDiscountAmount  Decimal? @db.Decimal(10, 2) // Dollar amount saved

  // Giveaway credits earned from this order
  creditsEarned Int         @default(0)

  // Shipping info (stored as JSON string)
  shippingAddress String?   @db.Text

  items       OrderItem[]
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
  @@index([status])
  @@index([paymentId])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Price at time of order

  @@index([orderId])
  @@index([productId])
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

// Giveaway Models - Lottery-style pick system
model Giveaway {
  id          String          @id @default(cuid())
  title       String          // e.g., "Ikoria Booster Box"
  description String?         @db.Text
  image       String?         // Vercel Blob URL - picture of sealed box

  // Slot configuration
  slotCount   Int             @default(36) // Number of items/packs in the box (1-100)
  hasBoxTopper Boolean        @default(false) // Special bonus slot for box topper

  // Participation settings
  minParticipation   Int      @default(10000) // Minimum picks to trigger draw
  freeEntriesPerUser Int      @default(10)    // Free entries per user per giveaway
  creditCostPerPick  Int      @default(1)     // Credits per pick (1-100), box topper is 3x this

  // Status tracking
  status      GiveawayStatus  @default(OPEN)
  totalPicks  Int             @default(0)     // Counter for total picks made

  // Draw information
  drawDate       DateTime?    // Set when min participation is reached (next business day 7:30 PM EST)
  entryCutoff    DateTime?    // 5 hours before draw time
  pick3Result    String?      // Ohio Lottery Pick 3 result (e.g., "247")
  pick3Date      DateTime?    // Date of the Pick 3 drawing

  // Prize info
  prizeValue  Decimal?        @db.Decimal(10, 2) // Total value of the box

  // Relations
  picks       GiveawayPick[]
  winners     GiveawayWinner[]

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([status])
}

enum GiveawayStatus {
  OPEN        // Accepting picks, hasn't hit minimum
  FILLING     // Hit minimum, draw date set, still accepting until cutoff
  CLOSED      // Cutoff passed, waiting for Pick 3 result
  COMPLETED   // Winners determined
  CANCELLED   // Giveaway cancelled
}

model GiveawayPick {
  id          String   @id @default(cuid())
  giveawayId  String
  giveaway    Giveaway @relation(fields: [giveawayId], references: [id], onDelete: Cascade)
  userId      String

  // The pick itself
  slot        Int      // Which slot (1 to slotCount)
  pickNumber  String   // 001-999 (stored as string to preserve leading zeros)

  // Entry type
  isFreeEntry Boolean  @default(false) // True if used free entry, false if used credit

  createdAt   DateTime @default(now())

  @@index([giveawayId])
  @@index([userId])
  @@index([giveawayId, slot])
  @@index([giveawayId, slot, pickNumber])
}

model GiveawayWinner {
  id          String   @id @default(cuid())
  giveawayId  String
  giveaway    Giveaway @relation(fields: [giveawayId], references: [id], onDelete: Cascade)
  userId      String

  slot        Int      // Which slot they won
  pickNumber  String   // Their winning pick number
  distance    Int      // How far from Pick 3 (0 = exact match)

  // Fulfillment
  claimed     Boolean  @default(false)
  shippedAt   DateTime?
  trackingNumber String?
  usedVipFreeShipping Boolean @default(false) // If VIP member used their free shipping

  createdAt   DateTime @default(now())

  @@unique([giveawayId, slot]) // Only one winner per slot
  @@index([giveawayId])
  @@index([userId])
}

// ===================================
// Forum System
// ===================================

model ForumCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  icon        String?  // emoji or icon name
  displayOrder Int     @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  topics      ForumTopic[]

  @@index([slug])
  @@index([displayOrder])
  @@index([isActive])
}

model ForumTopic {
  id              String   @id @default(cuid())
  categoryId      String
  authorId        String
  title           String
  slug            String   @unique
  isPinned        Boolean  @default(false)
  isLocked        Boolean  @default(false)
  viewCount       Int      @default(0)
  replyCount      Int      @default(0)
  lastReplyAt     DateTime?
  lastReplyUserId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  category        ForumCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  posts           ForumPost[]
  followers       ForumTopicFollower[]

  @@index([categoryId])
  @@index([authorId])
  @@index([slug])
  @@index([isPinned, lastReplyAt])
  @@index([createdAt])
}

model ForumPost {
  id          String   @id @default(cuid())
  topicId     String
  authorId    String
  content     String   @db.Text
  isEdited    Boolean  @default(false)
  editedAt    DateTime?
  editedBy    String?
  isDeleted   Boolean  @default(false)
  deletedAt   DateTime?
  deletedBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  topic       ForumTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  attachments ForumAttachment[]

  @@index([topicId])
  @@index([authorId])
  @@index([createdAt])
  @@index([isDeleted])
}

model ForumAttachment {
  id        String   @id @default(cuid())
  postId    String
  url       String   // Vercel Blob URL
  filename  String
  mimeType  String
  size      Int      // bytes
  width     Int?     // for images
  height    Int?     // for images
  createdAt DateTime @default(now())

  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model ForumPrivateMessage {
  id          String   @id @default(cuid())
  senderId    String
  subject     String
  content     String   @db.Text
  createdAt   DateTime @default(now())

  participants ForumMessageParticipant[]

  @@index([senderId])
  @@index([createdAt])
}

model ForumMessageParticipant {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  isRead    Boolean  @default(false)
  readAt    DateTime?
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  message   ForumPrivateMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([userId])
  @@index([messageId])
  @@index([isRead])
  @@index([isDeleted])
}

model ForumTopicFollower {
  id                 String   @id @default(cuid())
  topicId            String
  userId             String
  emailNotifications Boolean  @default(true)
  unsubscribeToken   String   @unique @default(cuid())
  createdAt          DateTime @default(now())

  topic              ForumTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@unique([topicId, userId])
  @@index([userId])
  @@index([topicId])
  @@index([unsubscribeToken])
}

// ===================================
// Notification System
// ===================================

enum NotificationType {
  PRIVATE_MESSAGE  // New PM received
  TOPIC_REPLY      // Reply in followed topic
  GIVEAWAY_WIN     // Won a giveaway slot
  ORDER_UPDATE     // Order status changed
  SYSTEM           // System announcements
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?          // URL to navigate to when clicked
  icon      String?          // Optional emoji or icon name
  isRead    Boolean          @default(false)
  metadata  Json?            // Additional data
  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@index([userId, isRead])
}
